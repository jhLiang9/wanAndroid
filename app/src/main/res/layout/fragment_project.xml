<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.ProjectFragment">

    <fragment
        android:id="@+id/project_nav"
        android:name="com.example.wanandroid.fragment.ProjectListFragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    </fragment>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#ff888888"/>
    <fragment
        android:id="@+id/project_content"
        android:name="com.example.wanandroid.fragment.ProjectContentFragment"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent">
    </fragment>
</LinearLayout>