<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent"
        android:background="@color/light_gray"
        tools:context=".fragment.ProfileFragment">


        <RelativeLayout
            android:id="@+id/rl0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5">

            <ImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="20sp"
                android:layout_marginTop="20sp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:layout_toEndOf="@id/image"
                android:text="@string/clk_login"
                android:textSize="20sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl0"
            android:layout_marginTop="20sp"
            android:background="#F5F5F5">

            <RelativeLayout
                android:id="@+id/rl_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/coin"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/tv_rank"
                    android:clickable="true"
                    android:focusable="true"
                    android:text=""
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text=">"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/rl_rank"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/rl_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_rank"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/account_detail"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text=">"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/rl_profile"
                android:background="@color/light_gray" />


            <RelativeLayout
                android:id="@+id/rl_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_profile"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/my_collect"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text=">"
                    android:textSize="18sp" />
            </RelativeLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/rl_collection"
                android:background="@color/light_gray" />


            <RelativeLayout
                android:id="@+id/rl_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_collection"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="false">

                <TextView
                    android:id="@+id/navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/tool_navi"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text=">"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/rl_navigation"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/share_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_navigation"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="false"

                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/share_article"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text=">"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/share_article"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/share_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/share_article"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="false"

                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/share_project"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:text=">"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/share_project"
                android:background="@color/light_gray" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl1"
            android:layout_marginTop="20dp"
            android:background="@color/white_smoke">

            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:focusable="false"
                    android:text="@string/logout"
                    android:textSize="18sp" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>